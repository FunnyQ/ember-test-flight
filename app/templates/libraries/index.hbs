<h2>內容列表</h2>

<div class="row">
  {{#each model as |library|}}
  <div class="col-md-4">
    <div class="panel panel-default library-item">
      <div class="panel-heading">
        <h3 class="panel-title">{{library.name}}</h3>
      </div>
      <div class="panel-body">
        <p>Address: {{library.address}}</p>
        <p>Phone: {{library.phone}}</p>
      </div>
      <div class="panel-footer text-right">
        {{#link-to 'libraries.edit' library.id class='btn btn-success btn-xs'}}編輯{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>刪除</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>
